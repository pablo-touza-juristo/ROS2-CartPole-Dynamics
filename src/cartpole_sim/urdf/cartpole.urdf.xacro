<?xml version="1.0"?>
<robot name="cartpole">
    <link name="world">

    </link>

    <link name="cart">
        <visual>
            <geometry>
                <box size="0.5 0.2 0.1"/>
            </geometry>
        </visual>   
    </link>

    <link name="pendulum">
        <visual>
            <geometry>
                <cylinder length="1.0" radius="0.01"/>
            </geometry>
            <origin xyz="0 0 0.5"/>
        </visual>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.2"/>
            </geometry>
            <origin xyz="0 0 1"/>
        </visual>
    </link>

    <!-- Joints of the system -->
    <joint name="cart_joint" type="prismatic">
        <parent link="world"/>
        <child link="cart"/>
        <origin xyz="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-2.0" upper="2.0" velocity="100"/>
    </joint>

    <joint name="pendulum_joint" type="continuous">
        <parent link="cart"/>
        <child link="pendulum"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>
